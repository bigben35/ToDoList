<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"/>
		<meta name="description" content="ToDoList"/>
		<title>
			{% block title %}ToDoList{% endblock %}
		</title>
        <!-- Bootstrap Core CSS -->
        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">

        <!-- Custom CSS -->
        <link href="{{ asset('css/shop-homepage.min.css') }}" rel="stylesheet">

        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    
    </head>
    <body>
        <nav class="navbar navbar-fixed-top" style="background-color: #f8f9fa;" role="navigation">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <a class="navbar-brand" href="{{ path('homepage') }}">
                            <img src="{{ asset('img/Logo_OpenClassrooms.png') }}" alt="OpenClassrooms">
                            <span>ToDoList</span>
                        </a>
                    </div>
                    <div class="text-right">
                        <p class="my-auto">
                            {% if app.user %}
                                <a href="{{ path('app_logout') }}" class="btn btn-danger">Se déconnecter</a>
                            {% endif %}
                            {% if not app.user and 'app_login' != app.request.attributes.get('_route') %}
                                <a href="{{ path('app_login') }}" class="btn btn-success">Se connecter</a>
                            {% endif %}
                        </p>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Main Content-->
        <div class="container">

            {# flash_messages  #}
            <div class="col-md-12">
                {% for flash_message in app.session.flashBag.get('success') %}
                    <div class="alert alert-success" role="alert">
                        <strong>Bravo !</strong> {{ flash_message }}
                    </div>
                        
                {% endfor %}

                {% for flash_message in app.session.flashBag.get('error') %}
                    <div class="alert alert-danger" role="alert">
                        <strong>Erreur !</strong> {{ flash_message }}
                    </div>
                {% endfor %}
                {% block header_title %}{% endblock %}
                {% block header_img %}
                    <img class="slide-image" src="{{ asset('img/todolist_homepage.webp') }}" alt="image todolist">
                {% endblock %}
            </div>
            <div class="row">
                <div class="col-md-12">
                    {% block body %}{% endblock %}
                </div>
            </div>
            <hr>
            <footer class="fixed-bottom">
                <div class="row">
                    <div class="col-lg-12">
                        <p class="text-center">Copyright &copy; ToDoList</p>
                    </div>
                </div>
            </footer>
        </div>
        
        <script defer src="{{ asset('js/bootstrap.min.js') }}"></script>
    </body>
</html>
